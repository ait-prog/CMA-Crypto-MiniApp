# Пример workflow для деплоя API на Railway/Render/Fly.io
# Скопируйте этот файл в .github/workflows/api-deploy.yml и настройте

name: Deploy API

on:
  push:
    branches:
      - main
    paths:
      - 'api/**'

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      # Пример для Railway
      - name: Deploy to Railway
        uses: bervProject/railway-deploy@v0.2.3
        with:
          railway_token: ${{ secrets.RAILWAY_TOKEN }}
          service: api
      
